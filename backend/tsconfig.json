{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "outDir": "./dist",
    "rootDir": "./src",                     
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
